<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/myRecipe_cardView_width"
        android:layout_height="@dimen/myRecipe_cardView_height"
        android:layout_marginTop="@dimen/myRecipe_cardView_marginTop"
        android:layout_marginBottom="@dimen/myRecipe_cardView_marginBottom"
        app:cardBackgroundColor="@color/light_500"
        app:cardCornerRadius="@dimen/myRecipe_cardView_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/imageView_myRecipe_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:clickable="true"
            android:contentDescription="@string/addRecipeButton"
            android:focusable="true"
            android:scaleType="center"
            android:src="@drawable/ic_round_add_24" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

