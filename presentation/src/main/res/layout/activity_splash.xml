<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.splash.LaunchActivity">

    <ImageView
        android:id="@+id/imageView_splash_title"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_text"
        app:layout_constraintBottom_toTopOf="@id/imageView_splash_food"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/imageView_splash_food"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_food"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_splash_title" />

</androidx.constraintlayout.widget.ConstraintLayout>