<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/blue_600</item>
        <item name="titleTextColor">@color/light_100</item>
    </style>

    <style name="EditorInputField" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_editor_input_field</item>
        <item name="android:textColor">@color/dark_500</item>
        <item name="android:textSize">@dimen/editor_inputField_textSize</item>
        <item name="android:paddingTop">@dimen/editor_inputField_paddingVertical</item>
        <item name="android:paddingBottom">@dimen/editor_inputField_paddingVertical</item>
        <item name="android:paddingStart">@dimen/editor_inputField_paddingHorizontal</item>
        <item name="android:paddingEnd">@dimen/editor_inputField_paddingHorizontal</item>
        <item name="android:layout_marginStart">@dimen/editor_inputField_marginStart</item>
        <item name="android:layout_marginEnd">@dimen/editor_inputField_marginEnd</item>
    </style>

    <style name="EditorInputLabel" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/dark_500</item>
        <item name="android:textSize">@dimen/editor_inputLabel_textSize</item>
        <item name="android:layout_marginStart">@dimen/editor_inputLabel_marginStart</item>
    </style>


    <style name="SummaryLabel" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/dark_500</item>
        <item name="android:textSize">@dimen/summary_label_textSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/summary_label_marginTop</item>
    </style>

    <style name="SummaryTextCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/summary_textCardView_marginTop</item>
        <item name="cardCornerRadius">@dimen/summary_cardView_corner</item>
        <item name="cardElevation">@dimen/summary_cardView_elevation</item>
        <item name="strokeWidth">@dimen/summary_cardView_strokeWidth</item>
        <item name="strokeColor">@color/dark_400</item>
        <item name="android:background">@color/light_500</item>
    </style>

    <style name="SummaryText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/dark_500</item>
        <item name="android:textSize">@dimen/summary_text_textSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/summary_summaryText_padding</item>
    </style>

    <style name="SummaryFloatingButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textColor">@color/light_100</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/summary_floatingButton_paddingVertical</item>
        <item name="android:paddingBottom">@dimen/summary_floatingButton_paddingVertical</item>
        <item name="android:paddingStart">@dimen/summary_floatingButton_paddingStart</item>
        <item name="android:paddingEnd">@dimen/summary_floatingButton_paddingEnd</item>
        <item name="android:drawablePadding">@dimen/summary_floatingButton_drawablePadding</item>
        <item name="android:textSize">@dimen/summary_floatingButton_textSize</item>
        <item name="backgroundTint">@color/blue_500</item>
        <item name="android:background">@drawable/bg_summary_button_round</item>
        <item name="android:layout_marginBottom">@dimen/summary_floatingButton_marginBottom</item>
        <item name="android:visibility">gone</item>
        <item name="android:alpha" format="float" type="dimen">0.0</item>
    </style>
</resources>
